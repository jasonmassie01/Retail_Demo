[Unit]
Description=Gemini Retail Demo Streamlit App
After=network.target

[Service]
User=admin_jasonmassie_altostrat_com
WorkingDirectory=/home/admin_jasonmassie_altostrat_com/retail_demo
ExecStart=/usr/bin/python3 -m streamlit run app.py --server.port=8501 --server.address=0.0.0.0 --server.headless=true
